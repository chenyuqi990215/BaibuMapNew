<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e9eafd"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/add_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Activity"
            android:textColor="#8078e0"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_title"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="活动标题"
                    android:textColor="#8078e0"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/add_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入标题"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_type"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:textColor="#8078e0"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="活动类型"
                    android:textSize="20dp"
                    android:id="@+id/textView" />

                <RadioGroup
                    android:id="@+id/add_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">
                            <RadioButton
                                android:id="@+id/add_enjoyment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="娱乐"/>
                            <RadioButton
                                android:id="@+id/add_food"
                                android:layout_marginLeft="40dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="美食"
                                android:layout_weight="0.44" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/add_sport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="运动"/>
                            <RadioButton
                                android:layout_marginLeft="40dp"
                                android:id="@+id/add_study"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学习"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_clock"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="#8078e0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="活动时间"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/add_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入时间"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_location"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="#8078e0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="活动地点"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/add_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="请选择地点"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"/>
                <ImageView
                    android:id="@+id/add_map"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/ic_map"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_sex"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="#8078e0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="邀约对象"
                    android:textSize="20dp"
                    />
                <RadioGroup
                    android:id="@+id/add_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/add_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="男性"/>
                            <RadioButton
                                android:id="@+id/add_female"
                                android:layout_marginLeft="40dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="女性"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/add_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="男女均可"/>
                        </LinearLayout>
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_content"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="#8078e0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="活动描述"
                    android:textSize="20dp"
                    />
                <EditText
                    android:id="@+id/add_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请描述活动"
                    android:maxLines="2"/>
            </LinearLayout>

            <Button
                android:id="@+id/add_confirm"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/shape_point3"
                android:layout_marginTop="16dp"
                android:text="确认"
                android:textColor="#8078e0"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:elevation="0dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>