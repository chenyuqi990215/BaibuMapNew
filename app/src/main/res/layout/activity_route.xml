<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9eafd">
    <LinearLayout
        android:id="@+id/route_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e9eafd"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/route_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Your Way"
            android:layout_gravity="center_vertical"
            android:textColor="#8078e0"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/route_header"
        android:id="@+id/bmapView3"
        android:clickable="true" />
    <Button
        android:id="@+id/route_guide"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/shape_point3"
        android:layout_marginTop="16dp"
        android:text="开始导航"
        android:textColor="#8078e0"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:elevation="0dp" />

</RelativeLayout>