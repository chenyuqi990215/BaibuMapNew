<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:weightSum="1">
        <ImageView
            android:id="@+id/footprint_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_vertical"
            android:background="@drawable/footprint_portrait"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:hint="Name"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#505050"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="0.69">
                <TextView
                    android:id="@+id/school"
                    android:hint="School"
                    android:layout_width="match_parent"
                    android:layout_marginRight="2dp"
                    android:textColor="#606060"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="#606060"
                    android:layout_marginRight="2dp"
                    android:hint="Department"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/type"
            android:text="Type"
            android:textColor="#8078e0"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/shape"/>

        <TextView
            android:hint="Title"
            android:id="@+id/title"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#505050"
            android:layout_marginLeft="20dp"

            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/content"
        android:hint="Content"
        android:textSize="20dp"
        android:textColor="#606060"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/footprint_time"/>

        <TextView
            android:id="@+id/date"
            android:hint="Date"
            android:textSize="15dp"
            android:textColor="#707070"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/footfrint_position"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position"
            android:textColor="#707070"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/footprint_sex"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sex"
            android:textSize="15dp"
            android:textColor="#707070"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#a0a0a0"/>
</LinearLayout>